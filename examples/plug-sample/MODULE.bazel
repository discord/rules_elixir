    name = "plug_crypto",
    version = "2.1.1",
    sha256 = "6470bce6ffe41c8bd497612ffde1a7e4af67f36a15eea5f921af71cf3e11247c",
)
use_repo(
    elixir_packages,
    "plug_crypto",
